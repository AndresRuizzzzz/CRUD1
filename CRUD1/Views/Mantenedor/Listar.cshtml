@model List<ContactoModel>
@{
    ViewData["Title"] = "Listar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card-header">
    Lista de Contactos
</div>
    <div class="card-body">
    <a asp-action="Crear" asp-controller="Mantenedor" class="btn btn-warning"> <i class="bi bi-person-plus"></i>Añadir nuevo contacto</a>
        <hr />
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Telefono</th>
                    <th>Correo</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Nombre</td>
                    <td>@item.Telefono</td>
                    <td>@item.Correo</td>
                    <td>
                        <a asp-action="Editar" asp-controller="Mantenedor" class="btn btn-primary btn-sm" asp-route-idContacto="@item.idContacto"><i class="bi bi-pencil-square"></i>Editar</a>
                        <a asp-action="Eliminar" asp-controller="Mantenedor" class="btn btn-danger btn-sm" asp-route-idContacto="@item.idContacto"><i class="bi bi-person-dash"></i>Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>

        </table>
    </div>
</div>

